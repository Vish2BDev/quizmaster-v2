{
  "name": "quiz-master-v2",
  "version": "1.0.0",
  "description": "Quiz Master V2 - Modern Web Application with Flask Backend and Vue.js Frontend",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "install:playwright": "playwright install",
    "setup:frontend": "cd frontend && npm install",
    "setup:backend": "cd backend && pip install -r requirements.txt",
    "start:frontend": "cd frontend && npm run serve",
    "start:backend": "cd backend && python app.py",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\""
  },
  "keywords": [
    "quiz",
    "education",
    "flask",
    "vue",
    "bootstrap",
    "testing",
    "playwright"
  ],
  "author": "Quiz Master Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "."
  }
}